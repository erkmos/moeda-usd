{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
